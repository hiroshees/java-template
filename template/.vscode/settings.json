{
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "files.eol": "\n",
  "editor.defaultFormatter": null,
  "editor.formatOnType": false,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.rulers": [200],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  //"editor.wordWrap": "off",
  "editor.renderControlCharacters": true,
  "editor.quickSuggestions": {
    "comments": false
  },
  // "prettier.singleQuote": true,
  // "prettier.printWidth": 80,
  // "prettier.semi": true,
  // "prettier.tabWidth": 2,
  // "prettier.ignorePath": ".gitignore",
  "css.lint.unknownAtRules": "ignore",
  "redhat.telemetry.enabled": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, .eslintrc.json, next.config.mjs, postcss.config.mjs, tailwind.config.ts, tsconfig.json, next-env.d.ts, .gitignore, next.config.ts, .eslintrc.cjs, .env, .env.example, eslint.config.mjs, eslint.config.js, .lintstagedrc, .prettierrc, .prettierignore, .prettierrc.mjs, .tool-versions, babel.config.cjs, jest.config.mjs, LICENSE",
    "*.mts": "${capture}.typegen.ts",
    "*.cts": "${capture}.typegen.ts"
  },
  "search.exclude": {
    "**/node_modules": true
  },
  // Windows GitBash
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  // Windowsのデフォルトターミナル
  //"terminal.integrated.defaultProfile.windows": "PowerShell",
  // cmd.exeの場合
  // "terminal.integrated.defaultProfile.windows": "Command Prompt",
  // Linux
  "terminal.integrated.defaultProfile.linux": "bash",
  // macOS Catalina以降
  "terminal.integrated.defaultProfile.osx": "zsh"
}
